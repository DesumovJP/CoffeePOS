{
  "kind": "collectionType",
  "collectionName": "modifier_groups",
  "info": {
    "singularName": "modifier-group",
    "pluralName": "modifier-groups",
    "displayName": "Modifier Group",
    "description": "Groups of modifiers (e.g., Size, Add-ons)"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "displayName": {
      "type": "string",
      "maxLength": 100
    },
    "description": {
      "type": "text",
      "maxLength": 500
    },
    "type": {
      "type": "enumeration",
      "enum": ["single", "multiple"],
      "default": "single",
      "required": true
    },
    "isRequired": {
      "type": "boolean",
      "default": false
    },
    "minSelections": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "maxSelections": {
      "type": "integer",
      "min": 0
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "modifiers": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::modifier.modifier",
      "mappedBy": "modifierGroup"
    },
    "products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product",
      "mappedBy": "modifierGroups"
    }
  }
}
