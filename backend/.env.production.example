# ============ DATABASE (Railway PostgreSQL) ============
DATABASE_URL=${{Postgres.DATABASE_URL}}
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=false
DATABASE_POOL_MIN=0
DATABASE_POOL_MAX=5

# ============ SERVER ============
HOST=0.0.0.0
PORT=1337
NODE_ENV=production
PUBLIC_URL=https://YOUR_RAILWAY_DOMAIN.up.railway.app

# ============ SECURITY (generate: openssl rand -base64 32) ============
APP_KEYS=key1,key2
API_TOKEN_SALT=
ADMIN_JWT_SECRET=
TRANSFER_TOKEN_SALT=
JWT_SECRET=
ENCRYPTION_KEY=

# ============ SEED (true only on first deploy!) ============
SEED_DATABASE=true

# ============ CORS ============
FRONTEND_URL=https://your-app.vercel.app

